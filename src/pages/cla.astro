---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import CLAForm from '../components/CLAForm.svelte';
import { CLA_TEXT, CLA_VERSION } from '../lib/cla-text';
---

<BaseLayout title="Contributor License Agreement - CapCheck" description="Sign the CapCheck Contributor License Agreement to contribute to our open source projects.">
  <div class="cla-page">
    <Header />
    <main class="container">
      <h1>Contributor License Agreement</h1>

      <CLAForm claVersion={CLA_VERSION} claText={CLA_TEXT} client:load />
    </main>

    <Footer />
  </div>
</BaseLayout>

<style>
  .cla-page {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    padding: 2rem 16px;
  }

  .container {
    max-width: 800px;
    margin: 0 auto;
  }

  @media (min-width: 600px) {
    main {
      padding: 2rem 24px;
    }
  }

  @media (min-width: 768px) {
    main {
      padding: 2rem 32px;
    }
  }

  @media (min-width: 1200px) {
    main {
      padding: 2rem 0;
    }
  }

  h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }

  @media (max-width: 640px) {
    h1 {
      font-size: var(--text-3xl);
    }
  }
</style>
