<style>
  .page-wrapper {
    min-height: 100dvh;
    display: flex;
    flex-direction: column;
  }

  main {
    flex: 1;
    padding: 2rem;
  }

  .legal-content {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .legal-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .legal-header h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .intro {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .legal-nav {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  .legal-nav a {
    color: var(--brand-primary);
    text-decoration: none;
    font-weight: 600;
    font-size: var(--text-base);
    transition: opacity 0.2s ease;
  }

  .legal-nav a:hover {
    opacity: 0.8;
  }

  hr {
    border: none;
    border-top: 1px solid var(--gray-4);
    margin: 3rem 0;
  }

  section {
    scroll-margin-top: 2rem;
  }

  h2 {
    font-size: var(--text-3xl);
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  h3 {
    font-size: var(--text-xl);
    font-weight: 600;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  p {
    font-size: var(--text-base);
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  p strong {
    color: var(--text-primary);
  }

  ul {
    margin: 0 0 1rem 1.5rem;
    color: var(--text-secondary);
  }

  li {
    font-size: var(--text-base);
    line-height: 1.7;
    margin-bottom: 0.5rem;
  }

  a {
    color: var(--brand-primary);
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }

  .legal-disclaimer {
    font-size: var(--text-sm);
    background: var(--gray-6);
    padding: 1rem;
    border-radius: 8px;
    border: 1px solid var(--gray-4);
  }

  .contact-address {
    font-style: normal;
    margin-top: 1rem;
  }

  .legal-footer {
    text-align: center;
    padding-top: 1rem;
  }

  .legal-footer p {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    margin-bottom: 0.25rem;
  }

  @media (max-width: 640px) {
    main {
      padding: 1rem;
    }

    .legal-content {
      padding: 1rem 0;
    }

    .legal-header h1 {
      font-size: var(--text-2xl);
    }

    .intro {
      font-size: var(--text-base);
    }

    .legal-nav {
      flex-direction: column;
      gap: 1rem;
    }

    h2 {
      font-size: var(--text-2xl);
    }

    h3 {
      font-size: var(--text-lg);
    }
  }
</style>
